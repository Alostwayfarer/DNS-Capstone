pipeline {
    agent any
    
    stages {
        stage('Fetch Code') {
            steps {
                git url: 'https://github.com/Alostwayfarer/DNS-Capstone.git'
            }
        }
        
        stage('SonarQube Scan') {
            steps {
                script {
                    def scannerHome = tool 'sq-jenkins' // Ensure 'sq-jenkins' matches your SonarQube Scanner tool name
                    withSonarQubeEnv('Sonar-Qb-Server') {
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }
            }
        }
    }
}